<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Track Your Order</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
      background-color: #f4f6f8;
      color: #212b36;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 20px;
      box-sizing: border-box;
    }
    .card {
      background: white;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      text-align: center;
      width: 100%;
      max-width: 420px;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
    }
    h1 {
      margin-top: 0;
      color: #212b36;
      font-size: 22px;
      margin-bottom: 32px;
      font-weight: 700;
      letter-spacing: -0.5px;
    }
    .label {
      display: block;
      text-align: left;
      font-weight: 600;
      margin-bottom: 8px;
      color: #637381;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .input-wrapper {
      position: relative;
      margin-bottom: 24px;
    }
    input[type="text"],
    input[type="email"] {
      width: 100%;
      padding: 16px;
      border: 2px solid #dfe3e8;
      border-radius: 8px;
      box-sizing: border-box;
      font-size: 16px;
      transition: all 0.3s ease;
      color: #212b36;
      background-color: #fff;
      -webkit-appearance: none;
    }
    input[type="text"]:focus,
    input[type="email"]:focus {
      border-color: #008060;
      outline: none;
      box-shadow: 0 0 0 4px rgba(0, 128, 96, 0.1);
    }
    input[type="text"]:read-only,
    input[type="email"]:read-only {
      background-color: #f4f6f8;
      color: #919eab;
      border-color: #f4f6f8;
    }
    
    .input-group {
      margin-bottom: 20px;
      text-align: left;
    }
    .input-group:last-child {
      margin-bottom: 32px;
    }
    
    button {
      background-color: #008060;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      font-weight: 600;
      width: 100%;
      height: 52px;
      transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
      box-shadow: 0 4px 12px rgba(0, 128, 96, 0.2);
      position: relative;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    button:hover {
      background-color: #006e52;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 128, 96, 0.3);
    }
    button:active {
      transform: translateY(0);
      box-shadow: 0 2px 8px rgba(0, 128, 96, 0.2);
    }
    
    /* Loading State - Morphing Animation */
    button.is-loading {
      width: 52px; /* Morph into a circle */
      border-radius: 50%;
      background-color: #008060; /* Keep original color */
      color: transparent; /* Hide text */
      pointer-events: none;
      margin: 0 auto; /* Center the circle */
      padding: 0;
      box-shadow: none;
    }
    
    button.is-loading .btn-text {
      opacity: 0;
      transform: scale(0.5);
    }

    .spinner {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 24px;
      height: 24px;
      border: 3px solid rgba(255,255,255,0.3);
      border-radius: 50%;
      border-top-color: #fff;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    button.is-loading .spinner {
      opacity: 1;
      animation: spin 0.8s linear infinite;
    }

    .btn-text {
      transition: all 0.2s ease;
      white-space: nowrap;
    }
    
    @keyframes spin {
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    /* Fade out form elements when loading */
    .form-content {
      transition: opacity 0.5s ease;
    }
    .form-content.faded {
      opacity: 0.5;
      pointer-events: none;
    }

    @media (max-width: 600px) {
      .card {
        padding: 24px;
      }
      h1 {
        font-size: 20px;
        margin-bottom: 24px;
      }
    }
  </style>
</head>
<body>

<div class="card">
  <h1>Track Your Order</h1>
  <form method="GET" id="trackForm">
    <div class="form-content">
      
      <!-- Order Number Input -->
      <div class="input-group">
        <label class="label" for="order">Order Number</label>
        <div class="input-wrapper">
          <input
            id="order"
            type="text"
            name="order"
            placeholder="e.g. #EV0000"
            required
            class="input"
            autocomplete="off"
          >
        </div>
      </div>

      <!-- Email Input -->
      <div class="input-group">
        <label class="label" for="email">Email Address</label>
        <div class="input-wrapper">
          <input
            id="email"
            type="email"
            name="email"
            placeholder="e.g. your@email.com"
            required
            class="input"
            autocomplete="email"
          >
        </div>
      </div>

    </div>

    <button type="submit" id="trackBtn">
      <div class="spinner"></div>
      <span class="btn-text">Find Order</span>
    </button>
  </form>
</div>

<script>
  document.getElementById('trackForm').addEventListener('submit', function(e) {
    const orderInput = document.getElementById('order');
    const emailInput = document.getElementById('email');
    const btn = document.getElementById('trackBtn');
    
    if (!orderInput.value.trim() || !emailInput.value.trim()) {
      e.preventDefault();
      return;
    }

    // Trigger the morphing animation
    btn.classList.add('is-loading');
    
    // Lock inputs
    orderInput.readOnly = true;
    emailInput.readOnly = true;
    orderInput.blur();
    emailInput.blur();
  });

  // Reset state when user navigates back (BFCache)
  window.addEventListener('pageshow', function(event) {
    const orderInput = document.getElementById('order');
    const emailInput = document.getElementById('email');
    const btn = document.getElementById('trackBtn');
    
    // Always remove loading state on page show
    if (btn) btn.classList.remove('is-loading');
    if (orderInput) orderInput.readOnly = false;
    if (emailInput) emailInput.readOnly = false;
  });
</script>

</body>
</html>
